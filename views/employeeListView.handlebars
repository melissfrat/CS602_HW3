<div>
	<div class="table-responsive">
		<table class="table table-condensed">
			<thead>
				<tr>
					<th>First Name</th>
					<th>Last Name</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				{{#each data}}
					<tr>
						<td>{{this.firstName}}</td>
						<td>{{this.lastName}}</td>
					
						<td>
							<a href="/employee/delete/{{this.firstName}}/{{this.lastName}}">Delete</a>
						</td>
					</tr>

				{{/each}}
			</tbody>
			<tfooter>
				<tr><td>
				<button class="btn btn-primary" 
						onClick="addEmployee();">Add</button>
				</td></tr>
			</tfooter>
		</table>
	</div>
</div>




